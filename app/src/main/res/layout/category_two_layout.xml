<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/et_custom"
            android:layout_margin="8dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_iv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="14dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_category2"
                android:layout_width="90dp"
                android:layout_height="128dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="14dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/cv_iv_category"
                android:weightSum="10">
            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/sans_font"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Main Title"
                android:layout_weight="2"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_700"
                android:textSize="14sp"
                android:text="Sub Title"
                android:layout_weight="2"
                android:fontFamily="@font/sans_font"
                android:layout_marginBottom="10dp"
                />
                <TextView
                    android:id="@+id/tv_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:text="Sub Title"
                    android:layout_weight="2"
                    android:fontFamily="@font/sans_font"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:weightSum="6"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/tv_room_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:drawableStart="@drawable/bed"
                        android:drawableTint="@color/gray_700"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_bathroom_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:drawableStart="@drawable/bathtub"
                        android:drawableTint="@color/gray_700"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_washing_room_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:drawableStart="@drawable/washing_machine"
                        android:drawableTint="@color/gray_700"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="2"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_700"
                    android:textSize="18sp"
                    android:text="1,000"
                    android:textStyle="bold"
                    android:fontFamily="@font/sans_font"
                    android:drawableTint="@color/blue_700"
                    android:drawableStart="@drawable/dollar"

                    />


            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>